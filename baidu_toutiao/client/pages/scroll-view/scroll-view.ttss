.wrap {
    font-size: 16px;
}
.scroll-view {
    height: 166px;
    white-space: nowrap;
    padding: 0 25px;
    font-size: 0;
}
.color-a,
.color-b,
.color-c {
    height: 166px;
    line-height: 166px;
    text-align: center;
    font-size: 16px;
    color: #fff;
}

.color-a {
    background-color: #6895FF;
}
.color-b {
    background-color: #8FB1FF;
}
.color-c {
    background-color: #C3D1FF;
}

.row-view {
    display: inline-block !important;
    width: 100%;
    height: 166px;
    line-height: 166px;
    font-size: 20px;
}
